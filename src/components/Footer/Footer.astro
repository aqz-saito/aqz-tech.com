---
import siteConfig from "@/config/site.config";
import SocialLinks from "./SocialLinks.astro";

/**
 * Footer component that displays site information, links, and social media connections.
 *
 * @component
 * @description
 * - Displays copyright information
 * - Shows social media links
 * - Provides links to important pages
 * - Responsive design for all screen sizes
 * - Dark mode support
 *
 * @example
 * ---
 * import Footer from '@/components/Footer/Footer.astro';
 * ---
 * <Footer />
 */
---

<footer
  class="w-full border-t border-gray-200 bg-white dark:border-gray-800 dark:bg-gray-900"
>
  <div class="container mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
      <!-- Site Information -->
      <div class="space-y-4">
        <h2 class="text-lg font-bold text-gray-900 dark:text-white">
          {siteConfig.name}
        </h2>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          {siteConfig.description}
        </p>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h2 class="text-lg font-bold text-gray-900 dark:text-white">
          Quick Links
        </h2>
        <ul class="space-y-2 text-sm">
          <li>
            <a
              href="/about"
              class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
            >
              About
            </a>
          </li>
          <li>
            <a
              href="/contact"
              class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
            >
              Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- Legal Links -->
      <div class="space-y-4">
        <h2 class="text-lg font-bold text-gray-900 dark:text-white">Legal</h2>
        <ul class="space-y-2 text-sm">
          <li>
            <a
              href="/privacy"
              class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
            >
              Privacy Policy
            </a>
          </li>
          <li>
            <a
              href="/terms"
              class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
            >
              Terms of Use
            </a>
          </li>
        </ul>
      </div>

      <!-- Social Links -->
      <div class="space-y-4">
        <h2 class="text-lg font-bold text-gray-900 dark:text-white">Connect</h2>
        <SocialLinks />
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-12 border-t border-gray-200 pt-8 dark:border-gray-800">
      <p class="text-center text-sm text-gray-600 dark:text-gray-400">
        Â© {new Date().getFullYear()}
        {siteConfig.name}. All rights reserved.
      </p>
    </div>
  </div>
</footer>
